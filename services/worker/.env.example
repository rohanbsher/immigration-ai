# =============================================================================
# Immigration AI - Worker Service Environment Variables
# =============================================================================
# Copy this file to .env and fill in values.
# See services/worker/src/config.ts for the Zod schema.

# ---------------------------------------------------------------------------
# Required
# ---------------------------------------------------------------------------

# Standard Redis connection string (rediss:// for TLS, redis:// for local)
# NOTE: BullMQ needs standard Redis protocol, NOT Upstash REST API (https://)
REDIS_URL=redis://localhost:6379

# Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Supabase service role key (bypasses RLS - keep secret!)
SUPABASE_SERVICE_ROLE_KEY=

# ---------------------------------------------------------------------------
# Optional - AI Keys (at least one needed for AI processors)
# ---------------------------------------------------------------------------

OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# ---------------------------------------------------------------------------
# Optional - Email (Resend)
# ---------------------------------------------------------------------------

RESEND_API_KEY=
EMAIL_FROM=noreply@yourdomain.com

# ---------------------------------------------------------------------------
# Optional - PDF Service
# ---------------------------------------------------------------------------

PDF_SERVICE_URL=
PDF_SERVICE_SECRET=

# ---------------------------------------------------------------------------
# Server
# ---------------------------------------------------------------------------

# Health/admin server port (default: 3001)
PORT=3001

# Number of concurrent jobs per queue (default: 5)
WORKER_CONCURRENCY=5

# ---------------------------------------------------------------------------
# Security
# ---------------------------------------------------------------------------

# Password for Bull Board dashboard (basic auth).
# If not set, the dashboard is NOT mounted at all.
BULL_BOARD_PASSWORD=

# ---------------------------------------------------------------------------
# Environment
# ---------------------------------------------------------------------------

# development | production | test (default: development)
NODE_ENV=development

# ---------------------------------------------------------------------------
# Observability
# ---------------------------------------------------------------------------

# Sentry DSN for error tracking (optional)
SENTRY_DSN=
